{
  "manifest_version": 3,
  "key": "",
  "name": "X推文追踪器",
  "version": "1.0.0",
  "description": "手动记录和保存X推文、回复和repost到本地",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/tagged_bookmark 16px.png",
      "48": "icons/tagged_bookmark 48px.png",
      "128": "icons/tagged_bookmark 128px.png"
    }
  },
  "icons": {
    "16": "icons/tagged_bookmark 16px.png",
    "48": "icons/tagged_bookmark 48px.png",
    "128": "icons/tagged_bookmark 128px.png"
  }
}

